{
  "name": "flamelog",
  "version": "0.0.1",
  "private": true,
  "type": "module",
  "scripts": {
    "setup": "pnpm clean && pnpm install",
    "clean": "find . -name 'node_modules' -type d -prune -exec rm -rf '{}' + && find . -name '.turbo' -type d -prune -exec rm -rf '{}' + && find . -name '.next' -type d -prune -exec rm -rf '{}' +",
    "build": "turbo build",
    "dev": "turbo dev",
    "dev:clean": "pnpm clean && pnpm dev",
    "check-types": "turbo check-types",
    "lint": "turbo lint",
    "format": "turbo format",
    "format:check": "turbo format:check",
    "validate": "turbo validate",
    "prepare": "husky"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md,yml,yaml,css,scss}": [
      "prettier --write"
    ]
  },
  "devDependencies": {
    "@babel/core": "^7.24.0",
    "@babel/runtime-corejs3": "^7.26.10",
    "@typescript-eslint/eslint-plugin": "^7.1.0",
    "@typescript-eslint/parser": "^7.1.0",
    "@workspace/eslint-config": "workspace:*",
    "@workspace/typescript-config": "workspace:*",
    "@workspace/prisma-client": "workspace:*",
    "eslint": "^9.0.0",
    "husky": "^9.1.7",
    "lint-staged": "^15.5.0",
    "prettier": "^3.5.3",
    "prettier-plugin-tailwindcss": "^0.6.11",
    "turbo": "^2.4.4",
    "typescript": "^5.7.3"
  },
  "packageManager": "pnpm@10.4.1",
  "engines": {
    "node": ">=20"
  },
  "pnpm": {
    "onlyBuiltDependencies": [
      "@prisma/client",
      "@prisma/engines",
      "core-js-pure",
      "esbuild",
      "prisma",
      "sharp"
    ],
    "overrides": {
      "glob": "^10.3.10",
      "inflight": "^2.0.0",
      "lodash.get": "^4.4.2",
      "rimraf": "^5.0.5",
      "typescript": "^5.7.3",
      "tailwindcss": "^4.0.8",
      "@humanwhocodes/config-array": "^0.11.11",
      "@humanwhocodes/object-schema": "^2.0.2",
      "@typescript-eslint/eslint-plugin": "^7.1.0",
      "@typescript-eslint/parser": "^7.1.0",
      "@typescript-eslint/utils": "^7.1.0",
      "@typescript-eslint/type-utils": "^7.1.0"
    }
  },
  "dependencies": {
    "prisma": "^6.5.0"
  }
}
