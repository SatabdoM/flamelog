generator client {
  provider = "prisma-client-js"
  output   = "./../generated/client"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id    Int     @id @default(autoincrement())
  email String  @unique
  name  String?
}

model TestUser {
  id       Int      @id @default(autoincrement())
  email    String   @unique
  password String   @unique
  name     String?
  roles    String[]
  post     Post[]

  followers Follow[] @relation("Followers")
  following Follow[] @relation("Following")
}

model Post {
  id        Int      @id @default(autoincrement())
  title     String
  content   String
  createdAt DateTime @default(now())
  author    TestUser @relation(fields: [authorId], references: [id])
  authorId  Int
}

model Follow {
  id         Int @id @default(autoincrement())
  followerId Int
  followedId Int

  follower TestUser @relation("Followers", fields: [followerId], references: [id])
  followed TestUser @relation("Following", fields: [followedId], references: [id])

  createdAt DateTime @default(now())

  @@unique([followerId, followedId])
  @@index([followerId])
  @@index([followedId])
}
