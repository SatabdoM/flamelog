{
  "$schema": "https://turbo.build/schema.json",
  "ui": "tui",
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "inputs": ["$TURBO_DEFAULT$", ".env*"],
      "outputs": ["apps/web/.next/**", "!apps/web/.next/cache/**", "apps/server/dist/**"]
    },
    "check-types": {
      "dependsOn": ["^check-types"]
    },
    "dev": {
      "cache": false,
      "persistent": true
    },
    "lint": {
      "dependsOn": ["^lint"],
      "inputs": ["src/**/*.{ts,tsx}", "*.js", ".eslintrc*"],
      "outputs": [],
      "cache": true
    },
    "format": {
      "dependsOn": ["^format"],
      "inputs": ["**/*.{js,jsx,ts,tsx,css,scss,md,json}", ".prettierrc*"],
      "outputs": [],
      "cache": true
    },
    "format:check": {
      "dependsOn": ["^format:check"],
      "inputs": ["**/*.{js,jsx,ts,tsx,css,scss,md,json}", ".prettierrc*"],
      "outputs": [],
      "cache": true
    },
    "validate": {
      "dependsOn": ["lint", "format:check", "check-types"],
      "cache": false
    }
  }
}
